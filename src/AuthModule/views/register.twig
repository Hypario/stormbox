{% extends 'layout.twig' %}

{% block body %}
    <div class="container">
        <form action="{{ path('auth.register') }}" method="post">
            {{ field('username', user.username, 'Nom d\'utilisateur') }}
            {{ field('email', user.email, 'Adresse email', {type: 'email'}) }}
            {{ field('password', null, 'Mot de passe', {type: 'password'}) }}
            {{ field('password_confirm', null, 'Confirmez le mot de passe', {type: 'password'}) }}
            <button class="btn btn-primary">S'inscrire</button>
        </form>
    </div>
{% endblock %}
